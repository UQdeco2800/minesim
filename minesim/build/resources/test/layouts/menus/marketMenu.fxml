<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import minesim.menu.Button?>
<?import javafx.scene.layout.GridPane?>
<GridPane prefHeight="569.0" prefWidth="724.0" fx:id="marketMenu"
           xmlns="http://javafx.com/javafx/8.0.40"
           xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="minesim.menu.MarketMenu">
    <children>
        <HBox fx:id = "buttons">
            <children>
                <Button fx:id="peonButton" alignment="CENTER"
                        contentDisplay="CENTER"
                        mnemonicParsing="false"
                        prefHeight="40.0" prefWidth="142.0"
                        styleClass="Button" text="Peon Menu"
                        textAlignment="JUSTIFY">
                    <tooltip>
                        <Tooltip text="Buy Peons"/>
                    </tooltip>
                </Button>
                <Button fx:id="marketBuy"
                        alignment="CENTER"
                        contentDisplay="CENTER"
                        mnemonicParsing="false"
                        prefHeight="40.0" prefWidth="142.0"
                        styleClass="Button" text="Market Trade"
                        textAlignment="JUSTIFY">
                    <tooltip>
                        <Tooltip text="Buy from market"/>
                    </tooltip>
                </Button>
            </children>
        </HBox>
        <StackPane fx:id="mContext">
            <children>
                <GridPane fx:id="peonMenu"
                        visible="false">

                </GridPane>
                <GridPane fx:id="Menu" visible="true">

                </GridPane>
            </children>
        </StackPane>

    </children>


</GridPane>
